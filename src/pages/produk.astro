---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const products = (await getCollection("products")).filter((p) => p.data.published);
---

<Layout title="Produk Rempah" description="Rempah-rempah berkualitas dari Indonesia">
  <section class="hero">
    <div class="overlay"></div>
    <div class="hero-inner">
      <h1>Produk Rempah</h1>
      <p>Rempah-rempah berkualitas dari Indonesia</p>
    </div>
  </section>

  <section class="grid">
    {products.map((item) => (
      <article class="card">
        <div class="image-wrap">
          <img src={item.data.image} alt={item.data.title} loading="lazy" />
        </div>
        <div class="card-body">
          <h3>{item.data.title}</h3>
          <div class="divider" role="presentation"></div>
          <p>{item.data.description}</p>
        </div>
      </article>
    ))}
  </section>
</Layout>

<style>
  .hero {
    position: relative;
    height: 280px;
    background: url(/images/hero-rempah.svg) center/cover no-repeat;
    display: grid;
    place-items: center;
  }
  .hero .overlay {
    position: absolute;
    inset: 0;
    background: rgba(255,255,255,0.7);
    backdrop-filter: blur(1px);
  }
  .hero .hero-inner {
    position: relative;
    text-align: center;
    padding: 1.25rem 2rem;
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  }
  .hero h1 {
    margin: 0 0 .5rem;
    font-family: var(--font-serif);
    color: var(--text-strong);
    font-size: 2rem;
  }
  .hero p {
    margin: 0;
    color: var(--text);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1.5rem;
    padding: 2rem 1rem 4rem;
    max-width: 1100px;
    margin: 0 auto;
  }
  .card {
    background: var(--surface);
    border-radius: 14px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.06);
    overflow: hidden;
    border: 1px solid var(--surface-border);
  }
  .image-wrap {
    aspect-ratio: 3 / 2;
    overflow: hidden;
    background: var(--surface-2);
  }
  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .card-body {
    padding: 1rem;
  }
  .card h3 {
    font-family: var(--font-serif);
    margin: 0;
    color: var(--text-strong);
  }
  .divider {
    height: 2px;
    width: 40px;
    background: var(--primary);
    margin: .5rem 0 .75rem;
    border-radius: 2px;
  }
  .card p {
    margin: 0;
    color: var(--text);
    font-size: .95rem;
    line-height: 1.5;
  }
</style>
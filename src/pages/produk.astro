---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Produk Rempah" description="Katalog produk rempah">
  <section class="produk-grid">
    <article class="produk-card">
      <img src="/images/products/lada-hitam.svg" alt="Lada Hitam" loading="lazy" />
      <div class="produk-info">
        <h3>Lada</h3>
        <p>Aroma tajam, cocok untuk berbagai masakan.</p>
        <a class="btn" href="/produk/lada">Detail</a>
      </div>
    </article>
    <article class="produk-card">
      <img src="/images/products/kayu-manis.svg" alt="Kayu Manis" loading="lazy" />
      <div class="produk-info">
        <h3>Kayu Manis</h3>
        <p>Manis hangat, ideal untuk minuman dan kue.</p>
        <a class="btn" href="/produk/kayu-manis">Detail</a>
      </div>
    </article>
    <article class="produk-card">
      <img src="/images/products/cengkeh.svg" alt="Cengkeh" loading="lazy" />
      <div class="produk-info">
        <h3>Cengkeh</h3>
        <p>Rempah aromatik untuk kuliner dan kesehatan.</p>
        <a class="btn" href="/produk/cengkeh">Detail</a>
      </div>
    </article>
  </section>
</Layout>

<style>
  .produk-grid{ display:grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; padding: 1.25rem 1rem 2.5rem; }
  .produk-card{ background: var(--surface); border: 1px solid var(--surface-border); border-radius: 16px; overflow:hidden; display:flex; flex-direction: column; }
  .produk-card img{ width:100%; height: 180px; object-fit: cover; }
  .produk-info{ padding: 1rem; display:grid; gap:.5rem; }
  .btn{ display:inline-block; background: var(--brown); color:#fff; text-decoration:none; padding:.6rem .9rem; border-radius: 10px; font-weight:600; }
  .btn:hover{ filter: brightness(1.05); }

  @media (max-width: 900px){
    .produk-grid{ grid-template-columns: repeat(2, 1fr); }
    .produk-card img{ height: 160px; }
  }
  @media (max-width: 640px){
    .produk-grid{ grid-template-columns: 1fr; padding: 1rem .75rem 2rem; }
    .produk-card img{ height: 150px; }
    .btn{ width: 100%; text-align:center; }
  }
</style>
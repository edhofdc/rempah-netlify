---
const { title = 'Rempah — Company Profile', description = 'Rempah-rempah berkualitas dari Indonesia' } = Astro.props;
---
<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="theme-color" content="#8B5E3C" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="site-header">
      <a class="brand" href="/">Rempah</a>
      <nav>
        <a href="/">Home</a>
        <a href="/tentang-kami">Tentang Kami</a>
        <a href="/produk">Produk</a>
        <a href="/artikel">Artikel</a>
        <a href="/kontak">Kontak</a>
      </nav>
    </header>

    <main class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <p>© {new Date().getFullYear()} Rempah • Semua hak cipta dilindungi.</p>
    </footer>
  </body>
</html>

<style>
  :root{
    --brown:#8B5E3C; --cream:#F5EDE1; --green:#2F6B2D;
    --text:#3A3A3A; --text-strong:#2A2A2A;
    --surface:#ffffff; --surface-2:#FAF7F0; --surface-border:#E7E2D8;
    --font-serif: 'Playfair Display', serif;
    --font-sans: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
  }
  html, body { margin:0; width:100%; height:100%; background: var(--cream); color: var(--text); font-family: var(--font-sans); }
  .site-header{ position: sticky; top:0; z-index: 20; backdrop-filter: saturate(140%) blur(8px); background: rgba(245, 237, 225, .85); border-bottom: 1px solid var(--surface-border); display:flex; align-items:center; justify-content: space-between; padding:.75rem 1rem; }
  .brand{ font-family: var(--font-serif); font-weight:700; color: var(--brown); text-decoration:none; font-size:1.25rem; }
  nav{ display:flex; gap:.75rem; }
  nav a{ color: var(--text); text-decoration:none; padding:.5rem .6rem; border-radius:8px; }
  nav a:hover{ background: var(--surface-2); }
  .site-main{ min-height: calc(100vh - 140px); }
  .site-footer{ border-top: 1px solid var(--surface-border); padding: 1rem; text-align:center; color:#666; }
  h1, h2, h3 { font-family: var(--font-serif); color: var(--text-strong); }
</style>
